@model ASPFINALPROJECT.VWmodels.ViewModels

@{
    ViewBag.Title = "Dash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <h2>Single Student Comment - Dash</h2>




<a href="@Url.Action("Create","StudentCom")" class="btn btn-info">Create Content</a>

<table class="table mt-3">
    <thead class="thead-dark" style="font-size:13px">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Fullname</th>
            <th scope="col">Content</th>
            <th scope="col">Status</th>
            <th scope="col">Image</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @{int i = 0; }
        @foreach (var item in Model.studentSingleComments)
        {
            i++;

            <tr style="font-size:13px">
                <th scope="row">@i</th>
                <td>@item.FullName</td>
                <td>@item.ContentText</td>
                <td>@item.Status</td>
                <td>
                    <img src="~/Public/img/@item.Image" style="width:140px" />
                </td>
                <td>

                    <a href="@Url.Action("Update","StudentCom", new {id=item.Id })">
                        <i class="fas fa-edit"></i>
                    </a>

                    <a href="@Url.Action("Delete","StudentCom", new {id=item.Id })">
                        <i class="fas fa-trash-alt"></i>
                    </a>

            </tr>


        }
    </tbody>
</table>