@model ASPFINALPROJECT.Models.Slider

@{
    ViewBag.Title = "SliderUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <h2>Slider - Update</h2>



<form class="user" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <img src="~/Public/img/@Model.Image" width="100" />
            @Html.LabelFor(l => l.Image)
            @Html.TextBoxFor(l => l.ImageUpload, null, new { @class = "form-control form-control-user", @type = "file", name = "Fullname", @placeholder = "Title..." })
            @Html.ValidationMessageFor(l => l.ImageUpload, null, new { @class = "text-danger" })
        </div>

        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.Title)
            @Html.TextBoxFor(l => l.Title, null, new { @class = "form-control form-control-user", name = "Title", @placeholder = "Title..." })
            @Html.ValidationMessageFor(l => l.Title, null, new { @class = "text-danger" })
        </div>

        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.Subtitle)
            @Html.TextBoxFor(l => l.Subtitle, null, new { @class = "form-control form-control-user", name = "Subtitle", @placeholder = "Subtitle..." })
            @Html.ValidationMessageFor(l => l.Subtitle, null, new { @class = "text-danger" })
        </div>

        <input type="hidden" name="Image" value="@Model.Image" />


    </div>

    <button class="btn btn-primary btn-user btn-block">Submit</button>
    <hr>


</form>


