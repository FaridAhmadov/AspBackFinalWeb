@model ASPFINALPROJECT.Models.WelcomeToEduHome

@{
    ViewBag.Title = "WelcomeTehUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <h2>Welcome To Edu Home - Update</h2>


<form class="user" method="post" enctype="multipart/form-data">
    <div class="form-group row">



        <div class="col-sm-6 mb-3 mb-sm-0">
            <img src="~/Public/img/@Model.Image" height="100" />
            @Html.LabelFor(l => l.Image)
            @Html.TextBoxFor(l => l.ImageUpload, null, new { @class = "form-control form-control-user", @type = "file", name = "Fullname", @placeholder = "Title..." })
            @Html.ValidationMessageFor(l => l.ImageUpload, null, new { @class = "text-danger" })
        </div>

        <div class="col-sm-12 mb-3 mb-sm-0 mt-3">
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem
                {
                    Text = "Active",
                    Value = "Active",
                    Selected = true

                });
                listItems.Add(new SelectListItem
                {
                    Text = "Passive",
                    Value = "Passive",
                });
            }
            @Html.LabelFor(d => d.Activty)
            @Html.DropDownListFor(d => d.Activty, listItems, null, new { @class = "form-control form-control-user" })
        </div>

        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.Title)
            @Html.TextBoxFor(l => l.Title, null, new { @class = "form-control form-control-user", name = "Title", @placeholder = "Title..." })
            @Html.ValidationMessageFor(l => l.Title, null, new { @class = "text-danger" })
        </div>


        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.ContentText)
            @Html.TextAreaFor(l => l.ContentText, new { @class = "form-control", @id = "CKEdit" })
            @Html.ValidationMessageFor(l => l.ContentText, null, new { @class = "text-danger" })
        </div>
    </div>

    <input type="hidden" name="Image" value="@Model.Image" />


    <button class="btn btn-primary btn-user btn-block">Update</button>
    <hr>


    @section CKeditor{
        <script src="~/Areas/Admin/Public/ckeditor/ckeditor.js"></script>
    }
</form>


