@model ASPFINALPROJECT.VWmodels.ViewModels

@{
    ViewBag.Title = "WelcomeTehDash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <h2>Welcome To Edu Home - Dash</h2>

<a href="@Url.Action("WelcomeTehCreate","HomeP")" class="btn btn-info">Create Content</a>

<table class="table mt-3">
    <thead class="thead-dark" style="font-size:13px">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Activity</th>
            <th scope="col">Image</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @{int i = 0; }
        @foreach (var item in Model.welcomeToEduHomes)
        {
            i++;

        <tr style="font-size:13px">
            <th scope="row">@i</th>
            <td>@item.Title</td>
            <td>@(item.ContentText.Length>300? Html.Raw(item.ContentText.Substring(0,300)+ "...") : Html.Raw(item.ContentText))</td>
            <td>@item.Activty</td>
            <td>
                <img src="~/Public/img/@item.Image" style="width:140px" />
            </td>
            <td>

                <a href="@Url.Action("WelcomeTehUpdate","HomeP", new {id=item.Id })">
                    <i class="fas fa-edit"></i>
                </a>

                <a href="@Url.Action("WelcomeTehDelete","HomeP", new {id=item.Id })">
                    <i class="fas fa-trash-alt"></i>
                </a>

        </tr>


        }
    </tbody>
</table>