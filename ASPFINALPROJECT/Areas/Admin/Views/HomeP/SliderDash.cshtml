@model ASPFINALPROJECT.VWmodels.ViewModels

@{
    ViewBag.Title = "SliderDash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <h2>Slider - Dash</h2>



<a href="@Url.Action("SliderCreate","HomeP")" class="btn btn-info">Create Content</a>

<table class="table mt-3">
    <thead class="thead-dark" style="font-size:13px">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Subtitle</th>
            <th scope="col">Image</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @{int i = 0; }
        @foreach (var item in Model.slider)
        {
            i++;

        <tr style="font-size:13px">
            <th scope="row">@i</th>
            <td>@item.Title</td>
            <td>@item.Subtitle</td>

            <td>
                <img src="~/Public/img/@item.Image" style="width:140px" />
            </td>
            <td>
            <a href="@Url.Action("SliderUpdate","HomeP", new {id=item.Id })">
                <i class="fas fa-edit"></i>
            </a>

            <a href="@Url.Action("SliderDelete","HomeP", new {id=item.Id })">
                <i class="fas fa-trash-alt"></i>
            </a>
            </td>
        </tr>


        }
    </tbody>
</table>