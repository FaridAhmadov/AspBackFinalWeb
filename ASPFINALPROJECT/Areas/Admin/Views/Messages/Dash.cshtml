@model ASPFINALPROJECT.VWmodels.ViewModels

@{
    ViewBag.Title = "Dash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Messages - Dash</h2>


<table class="table mt-3">
    <thead class="thead-dark" style="font-size:13px">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Subject</th>
            <th scope="col">Message</th>
            <th scope="col">Post ID</th>
            <th scope="col">Page</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @{int i = 0; }
        @foreach (var item in Model.messages)
        {
            i++;

        <tr style="font-size:13px">
            <th scope="row">@i</th>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.Message</td>
            <td>@item.PostPageMsId</td>
            <td>@item.Page</td>

            <td>

                <a href="@Url.Action("Update","Messages", new {id=item.Id })">
                    <i class="fas fa-edit"></i>
                </a>

                <a href="@Url.Action("Delete","Messages", new {id=item.Id })">
                    <i class="fas fa-trash-alt"></i>
                </a>

        </tr>


        }
    </tbody>
</table>