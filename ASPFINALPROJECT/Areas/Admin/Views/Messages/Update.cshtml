@model ASPFINALPROJECT.Models.Messages

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Message - Update</h2>



<form class="user" method="post" enctype="multipart/form-data">
    <div class="form-group row">


        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.Name)
            @Html.TextBoxFor(l => l.Name, null, new { @class = "form-control form-control-user", name = "ContentText", @placeholder = "ContentText..." })
            @Html.ValidationMessageFor(l => l.Name, null, new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.Email)
            @Html.TextBoxFor(l => l.Email, null, new { @class = "form-control form-control-user", name = "ContentText", @placeholder = "ContentText..." })
            @Html.ValidationMessageFor(l => l.Email, null, new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.Subject)
            @Html.TextBoxFor(l => l.Subject, null, new { @class = "form-control form-control-user", name = "ContentText", @placeholder = "ContentText..." })
            @Html.ValidationMessageFor(l => l.Subject, null, new { @class = "text-danger" })
        </div>
        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.Message)
            @Html.TextBoxFor(l => l.Message, null, new { @class = "form-control form-control-user", name = "ContentText", @placeholder = "ContentText..." })
            @Html.ValidationMessageFor(l => l.Message, null, new { @class = "text-danger" })
        </div>


    </div>



    <button class="btn btn-primary btn-user btn-block">Update</button>
    <hr>


</form>


