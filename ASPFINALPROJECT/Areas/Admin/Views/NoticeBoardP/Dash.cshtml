@model ASPFINALPROJECT.VWmodels.ViewModels

@{
    ViewBag.Title = "Dash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <h2>Notice Board - Dash</h2>


<a href="@Url.Action("Create","NoticeBoardP")" class="btn btn-info">Create Content</a>

<table class="table mt-3">
    <thead class="thead-dark" style="font-size:13px">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Notice</th>
            <th scope="col">Date</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @{int i = 0; }
        @foreach (var item in Model.noticeBoards)
        {
            i++;

            <tr style="font-size:13px">
                <th scope="row">@i</th>
                <td>@item.ContentText</td>
                <td>@item.CreatedDate</td>
               
                <td>

                    <a href="@Url.Action("Update","StudentCom", new {id=item.Id })">
                        <i class="fas fa-edit"></i>
                    </a>

                    <a href="@Url.Action("Delete","StudentCom", new {id=item.Id })">
                        <i class="fas fa-trash-alt"></i>
                    </a>

            </tr>


        }
    </tbody>
</table>