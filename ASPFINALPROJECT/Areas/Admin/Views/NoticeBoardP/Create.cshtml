@model ASPFINALPROJECT.Models.NoticeBoard

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Notice Board - Create</h2>




<form class="user" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        

        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.Label("Notice")
            @Html.TextBoxFor(l => l.ContentText, null, new { @class = "form-control form-control-user", name = "ContentText", @placeholder = "Type here..." })
            @Html.ValidationMessageFor(l => l.ContentText, null, new { @class = "text-danger" })
        </div>

       
    </div>



    <button class="btn btn-primary btn-user btn-block">Submit</button>
    <hr>


</form>


