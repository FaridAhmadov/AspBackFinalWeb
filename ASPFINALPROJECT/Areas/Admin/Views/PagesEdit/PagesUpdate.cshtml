@model ASPFINALPROJECT.Models.Pagesedit


@{
    ViewBag.Title = "PagesUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>PagesUpdate</h2>


<form class="user" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            <img src="~/Public/img/@Model.Image" width="100" />
            @Html.LabelFor(l => l.ImageUpload)
            @Html.TextBoxFor(l => l.ImageUpload, null, new { @class = "form-control form-control-user", @type = "file", name = "Fullname", @placeholder = "Title..." })
            @Html.ValidationMessageFor(l => l.ImageUpload, null, new { @class = "text-danger" })
        </div>
        <div class="col-sm-6 mb-3 mb-sm-0">
            @{
                List<SelectListItem> listItems = new List<SelectListItem>();

                listItems.Add(new SelectListItem
                {
                    Text = "About",
                    Value = "About",
                    Selected = true

                });
                listItems.Add(new SelectListItem
                {
                    Text = "Courses",
                    Value = "Courses",
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Event",
                    Value = "Event",
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Teacher",
                    Value = "Teacher",
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Blog",
                    Value = "Blog",
                });
                listItems.Add(new SelectListItem
                {
                    Text = "Contact",
                    Value = "Contact",
                });
            }
            @Html.LabelFor(d => d.Page);
            @Html.DropDownListFor(d => d.Page, listItems, null, new { @class = "form-control form-control-user" })
        </div>

        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.PageTitle)
            @Html.TextBoxFor(l => l.PageTitle, null, new { @class = "form-control form-control-user", name = "Title", @placeholder = "Title..." })
            @Html.ValidationMessageFor(l => l.PageTitle, null, new { @class = "text-danger" })
        </div>

    </div>

    <input type="hidden" name="Image" value="@Model.Image" />


    <button class="btn btn-primary btn-user btn-block">Update</button>
    <hr>

</form>


