@model ASPFINALPROJECT.VWmodels.ViewModels

@{
    ViewBag.Title = "PagesDash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>PagesDash</h2>


<table class="table mt-3">
    <thead class="thead-dark" style="font-size:13px">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Page</th>
            <th scope="col">Image</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @{int i = 0; }
        @foreach (var item in Model.pagesedits)
        {
            i++;

        <tr style="font-size:13px">
            <th scope="row">@i</th>
            <td>@item.PageTitle</td>
            <td>@item.Page</td>

            <td>
                <img src="~/Public/img/@item.Image" style="width:140px" />
            </td>
            <td>

                <a href="@Url.Action("PagesUpdate","PagesEdit", new {id=item.Id })">
                    <i class="fas fa-edit"></i>
                </a>


        </tr>


        }
    </tbody>
</table>