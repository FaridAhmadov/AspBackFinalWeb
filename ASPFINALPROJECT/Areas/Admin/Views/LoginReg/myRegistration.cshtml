@model ASPFINALPROJECT.Models.Publishers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="~/Areas/Admin/Public/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Areas/Admin/Public/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" method="post" enctype="multipart/form-data">
                               
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.LabelFor(l => l.Image)
                                        @Html.TextBoxFor(l => l.ImageUpload, null, new { @class = "form-control form-control-user", @type = "file", name = "Fullname", @placeholder = "Title..." })
                                        @Html.ValidationMessageFor(l => l.ImageUpload, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.LabelFor(l => l.Fullname)
                                        @Html.TextBoxFor(l => l.Fullname, null, new { @class = "form-control form-control-user", @type = "Fullname", @placeholder = "Enter Fullname..." })
                                        @Html.ValidationMessageFor(l => l.Fullname, null, new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(l => l.Email)
                                    @Html.TextBoxFor(l => l.Email, null, new { @class = "form-control form-control-user", @type = "Email", @placeholder = "Enter Email..." })
                                    @Html.ValidationMessageFor(l => l.Email, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(l => l.Username)
                                    @Html.TextBoxFor(l => l.Username, null, new { @class = "form-control form-control-user", @type = "Username", @placeholder = "Enter Username..." })
                                    @Html.ValidationMessageFor(l => l.Username, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.LabelFor(l => l.Password)
                                        @Html.TextBoxFor(l => l.Password, null, new { @class = "form-control form-control-user", @type = "Password", @placeholder = "Enter Password..." })
                                        @Html.ValidationMessageFor(l => l.Password, null, new { @class = "text-danger" })
                                    </div>
                                </div>

                                <button class="btn btn-primary btn-user btn-block" type="submit">Register Account</button>
                                <hr>
                            </form>
                            <hr>
                            
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/Admin/Public/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/Admin/Public/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Areas/Admin/Public/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Areas/Admin/Public/js/sb-admin-2.min.js"></script>

</body>

</html>
