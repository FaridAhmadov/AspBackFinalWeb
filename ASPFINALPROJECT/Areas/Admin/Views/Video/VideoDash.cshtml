@model ASPFINALPROJECT.VWmodels.ViewModels
@{
    ViewBag.Title = "VideoDash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>VideoDash</h2>


<a href="@Url.Action("VideoCreate","Video")" class="btn btn-info">Create Content</a>

<table class="table mt-3">
    <thead class="thead-dark" style="font-size:13px">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Cover</th>
            <th scope="col">Video Link</th>
            <th scope="col">Settings</th>

        </tr>
    </thead>
    <tbody>
        @{int i = 0; }
        @foreach (var item in Model.videos)
        {
            i++;

        <tr style="font-size:13px">
            <th scope="row">@i</th>

            <td>
                <img src="~/Public/img/@item.Image" style="width:140px" />
            </td>
            <td>
                @item.VideoUrl
            </td>
            <td>
                <a href="@Url.Action("VideoUpdate","Video", new {id=item.Id })">
                    <i class="fas fa-edit"></i>
                </a>

                <a href="@Url.Action("VideoDelete","Video", new {id=item.Id })">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>


        }
    </tbody>
</table>