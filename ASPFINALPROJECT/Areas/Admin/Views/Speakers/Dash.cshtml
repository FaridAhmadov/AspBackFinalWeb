@model ASPFINALPROJECT.VWmodels.ViewModels

@{
    ViewBag.Title = "BlogDash";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Blog - Dash</h2>



<a href="@Url.Action("Create","Speakers")" class="btn btn-info">Create Content</a>
<br />
<br />
<table class="table mt-3">
    <thead class="thead-dark" style="font-size:13px">
        <tr>
            <th scope="col">#</th>
            <th scope="col" style="width:100px">Name</th>
            <th scope="col" style="width:350px">Profession</th>
            <th scope="col">Image</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 0; }
        @foreach (var item in Model.speakers)
        {
            i++;
            <tr style="font-size:13px">
                <th scope="row">@i</th>
                <td>@item.Name</td>
                <td>@item.ProfessionStatus</td>
                <td>
                    <img src="~/Public/img/@item.Image" style="width:140px" />
                </td>
                <td>

                    <a href="@Url.Action("Update","Speakers", new {id=item.Id })">
                        <i class="fas fa-edit"></i>
                    </a>

                    <a href="@Url.Action("Delete","Speakers", new {id=item.Id })">
                        <i class="fas fa-trash-alt"></i>
                    </a>

            </tr>


        }
    </tbody>
</table>

