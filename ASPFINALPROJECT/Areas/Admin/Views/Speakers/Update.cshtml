@model ASPFINALPROJECT.Models.Speakers

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>


<form class="user" id="qw" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.Image)
            @Html.TextBoxFor(l => l.ImageUpload, null, new { @class = "form-control form-control-user", @type = "file", name = "Image" })
            @Html.ValidationMessageFor(l => l.ImageUpload, null, new { @class = "text-danger" })
        </div>

        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.LabelFor(l => l.Name)
            @Html.TextBoxFor(l => l.Name, null, new { @class = "form-control form-control-user", name = "Title" })
            @Html.ValidationMessageFor(l => l.Name, null, new { @class = "text-danger" })
        </div>

        <div class="col-sm-12 mb-3 mb-sm-0">
            @Html.Label("Profession")
            @Html.TextBoxFor(l => l.ProfessionStatus, null, new { @class = "form-control form-control-user", name = "Title" })
            @Html.ValidationMessageFor(l => l.ProfessionStatus, null, new { @class = "text-danger" })
        </div>
    </div>


    <button class="btn btn-primary btn-user btn-block">Update</button>
    <input type="hidden" name="Image" value="@Model.Image" />

    <hr>


</form>


