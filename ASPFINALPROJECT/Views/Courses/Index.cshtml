@model ASPFINALPROJECT.VWmodels.ViewModels

<!-- Banner Area Start -->
@foreach (var item in ViewBag.CoBack)
{
    <div class="banner-area-wrapper" style="background-image: url('Public/img/@item.Image')">

        <div class="banner-area text-center">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="banner-content-wrapper">
                            <div class="banner-content">
                                <h2>@item.PageTitle</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="search" placeholder="Search..." name="searchText" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>

        @{
            Html.RenderPartial("~/Views/Shared/CoursesPartial.cshtml", Model.courses);
        }

    </div>
</div>
<!-- Course End -->