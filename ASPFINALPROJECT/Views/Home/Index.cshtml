@model ASPFINALPROJECT.VWmodels.ViewModels

<!-- Background Area Start -->
<section id="slider-container" class="slider-area two">
    <div class="slider-owl owl-theme owl-carousel">
        <!-- Start Slingle Slide -->
        @foreach (var item in Model.slider)
        {


            <div class="single-slide item" style="background-image: url(Public/img/@item.Image)">
                <!-- Start Slider Content -->
                <div class="slider-content-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="slide-content-wrapper">
                                    <div class="slide-content text-center">
                                        <h2>@item.Title </h2>
                                        <p>@item.Subtitle</p>
                                        <a class="default-btn" href="about.html">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Start Slider Content -->
            </div>
        }
</section>
<!-- Background Area End -->
<!-- Service Start -->
<div class="service-area two pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.homeInfoSections)
            {
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="single-service">
                        <h3><a href="teacher.html">@item.Title</a></h3>
                        <p>@item.Subtitle </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Service End -->
<!-- About Start -->


@{
    Html.RenderPartial("~/Views/Shared/WtehPartial.cshtml", Model.welcomeToEduHomes);
}

<!-- About End -->
<!-- Courses Area Start -->
<div class="courses-area two pt-150 pb-150 text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="Public/img/icon/section1.png" alt="section-title">
                    <h2>COURSES WE OFFER</h2>
                </div>
            </div>
        </div>
        <div class="row">


            @{
                Html.RenderPartial("~/Views/Shared/CoursesPartial.cshtml", Model.courses);
            }


        </div>
    </div>
</div>
<!-- Courses Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140">
    <div class="container">
        <div class="row">


            @{
                Html.RenderPartial("~/Views/Shared/NoticePartial.cshtml", Model.noticeBoards);
            }



        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/Public/img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-6 col-sm-12 col-xs-12">

                @foreach (var item in Model.upcomingEvents.Take(2))
                {
                    <div class="single-event mb-35">
                        <div class="event-img">
                            <a href="@Url.Action("Details","Event", new { Id = @item.Id })"><img src="~/Public/img/@item.Image" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@item.Date.ToString("dd MMMM yyyy")</h3>
                            <h4><a href="@Url.Action("Details","Event", new { Id = @item.Id })">@item.Title</a></h4>
                            <ul>
                                <li><i class="fa fa-clock-o"></i>@item.startTime - @item.EndTime</li>
                                <li><i class="fa fa-map-marker"></i>@item.Location</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" href="@Url.Action("Details","Event", new { Id = @item.Id })">join now</a>
                            </div>
                        </div>
                    </div>

                }
            </div>


            <div class="col-md-6 col-sm-12 col-xs-12">
                @foreach (var item in Model.upcomingEvents.Skip(2).Take(2))
                {
                    <div class="single-event mb-35">
                        <div class="event-img">
                            <a href="@Url.Action("Details","Event", new { Id = @item.Id })"><img src="~/Public/img/@item.Image" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@item.Date.ToString("dd MMMM yyyy")</h3>
                            <h4><a href="@Url.Action("Details","Event", new { Id = @item.Id })">@item.Title</a></h4>
                            <ul>
                                <li><i class="fa fa-clock-o"></i>@item.startTime - @item.EndTime</li>
                                <li><i class="fa fa-map-marker"></i>@item.Location</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" href="@Url.Action("Details","Event", new { Id = @item.Id })">join now</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
                </div>
            </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                @{ Html.RenderPartial("~/Views/Shared/StudenCom.cshtml", Model.studentSingleComments); }

            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/Public/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
                @{ Html.RenderPartial("~/Views/Shared/BlogPartial.cshtml", Model.latestFromBlogs);}            
        </div>
    </div>
</div>
<!-- Blog Area End -->


